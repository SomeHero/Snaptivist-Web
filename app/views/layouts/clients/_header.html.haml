.navbar
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".top-nav.nav-collapse,.sidebar-nav.nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      - if current_user
        %a#main-menu-toggle.hidden-phone.open
          %i.icon-reorder

      // Logo
      .row-fluid
        %a.brand.span2
          = image_tag 'logo.png'

      .nav-no-collapse.header-nav
        %ul.nav.pull-right
          %li.dropdown
            %a.btn.account.dropdown-toggle{"data-toggle" => "dropdown"}
              - if current_user
                .avatar
                .user
                  %span.hello Welcome
                  %span.name= "#{current_user.name}!"
            %ul.dropdown-menu
              %li.dropdown-menu-title
              %li
                %a{"href" => "/auth/logout"}
                  %i.icon-off= " Logout"