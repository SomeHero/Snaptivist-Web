          .controls
            %input#lastName.register-textfield.span12{"type" => "text", "name" => "LastName", "plalceholder" => "Last Name"}
      .row-fluid
        .span6
          .controls
            %input#emailAddress.register-textfield.span12{"type" => "text", "name" => "EmailAddress", "placeholder" => "Email Address"}
        .span6
          .controls
            %input#zipCode.register-textfield.span12{"type" => "text", "name" => "ZipCode", "plalceholder" => "Zip Code"}
