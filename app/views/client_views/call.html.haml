            %label.checkbox
              %input#optionsRoadios2{"type" => "checkbox", "name" => "optionsRadios", "value" => "options2"}
                No
            %label.checkbox
              %input#optionsRoadios2{"type" => "checkbox", "name" => "optionsRadios3", "value" => "options3"}
