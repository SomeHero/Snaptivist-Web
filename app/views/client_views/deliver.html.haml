.row-fluid{:style => "margin: 20px 0px 20px 0px"}
	#loaded-view-wrappe
		.row-fluid
			#action-wrapper
				%h2
					{{signature.user.first_name}}, thanks for adding your name, now let's deliver your signature
				%p.description
					Rest assured, adding your name is very valuable towards meeting our goal, but we want to get your voice heard today by delivering your signature directly to {{petition.target.first_name}} using Twitter
				.row-fluid
					#sign-petition-deliver
						#share-comment.drop-shadow-full.solid-white-back.text-left
							%textarea#comment{:maxlength => "115", :style => "width: 90%", "ng-model" => "deliver.tweet"}
							#message-counter.text-right {{115 - tweet.length}}
						%button#deliver-signature.action-button.icon{"ng-click" => "deliver_action()"}
							%span
								{{petition.tweet_cta_button_text || "Tweet @Target"}}
						.text-center
							%a{"ng-click" => "skip_delivery()"}
								Not Right Now
