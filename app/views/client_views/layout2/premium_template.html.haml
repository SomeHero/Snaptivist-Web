.client-logo-wrapper
	.client-logo.text-center#client-logo-top
		%img{"ng-src" => "{{petition.client.image_large}}"}
.container#petition-container
	#premium-headline.section-header.text-center
		%h2 Thanks for Signing
		%h5 Complete the Form below to Request Your Free Bumpter Magnet
	.panel.panel-default.panel-indented#premium-container
		.row
			.col-md-6.top-content-wrapper
				%div#petition-image-wrapper
					%div#petition-image{:style=>"background-image: url({{petition.image_full}});"}
			.col-md-6.vertical-middle-table.panel.panel-default
				%div.signature-form-container.vertical-middle-cell
					.form-group
						.col-md-6.text-left
							%input.form-control{"type"=>"text", "placeholder"=>"First Name"}
						.col-md-6.text-left
							%input.form-control{"type"=>"text", "placeholder"=>"Last Name"}
					.form-group
						.col-md-12.text-left
							%input.form-control{:style=>"width: 100%", "type"=>"text","placeholder"=>"Street Address 1"}
					.form-group
						.col-md-12.text-left
							%input.form-control{:style=>"width: 100%", "type"=>"text", "placeholder"=>"Street Address 2"}
					.form-group
						.col-md-12.text-left
							%inpu.form-controlt{:style=>"width: 100%","type"=>"text", "placeholder"=>"City"}
					.form-group
						.col-md-12.text-left
							%input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"State"}
					.form-group
						.col-md-12.text-left
							%input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"Zip Code"}
					.form-group
						.col-md-12.text-left
							%input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"Phone Number"}
					.form-group
						.col-md-12.text-left
							%input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"Email Address"}
					.form-group
						.col-md-12.text-center
							%button.btn.btn-primary
								Send My Magnet
.client-logo-wrapper
	.client-logo.text-center#client-logo-bottom
		%img{"ng-src" => "{{petition.client.image_large}}"}