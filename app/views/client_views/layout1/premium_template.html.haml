.text-center
  %div{"image-upload-overlay"=>"", "title"=>"Add Header Image", "notes"=>"Recommended image size: 950x250px", "image-name"=>"image_full"}
    .drop-shadow.lifted{"ng-style" => "signature_image_styling()"}
  %h2#petition-headline.contenteditable.placeholer-showing{"contenteditable"=>"", "ng-model" => "petition.delivery_headline_primary", "strip-br"=>"true", "select-non-editable"=>"true", "data-placeholder"=>"Delivery Headline", "name"=>"delivery_headline_primary", "required"=>""}
  %h1.title.contenteditable.placeholer-showing{"contenteditable"=>"", "ng-model" => "petition.delivery_headline_secondary", "strip-br"=>"true", "select-non-editable"=>"true", "data-placeholder"=>"Delivery Headline (Secondary)", "name"=>"delivery_headline_secondary", "required"=>""}
  %p.description
    %span.contenteditable.placeholer-showing{:style=>"display: block", "contenteditable"=>"", "ng-model" => "petition.summary", "strip-br"=>"true", "select-non-editable"=>"true", "data-placeholder"=>"Petition Summary", "name"=>"summary", "required"=>""}
  .row
    .col-md-6.top-content-wrapper
      %div#petition-image-wrapper{"image-upload-overlay"=>"", "title"=>"Add Premium Image", "notes"=>"Recommended image size: 350x350px", "image-name"=>"premium_image"}
        %div#petition-image{"ng-style" => "premium_image_styling()"}
    .col-md-6.top-content-wrapper#premium-form-wrapper
      %div.signature-form-container.vertical-middle-cell
        .form-group.clearfix
          .col-md-6.text-left#first-name-wrapper
            %input.form-control{"type"=>"text", "placeholder"=>"First Name"}
          .col-md-6.text-left#last-name-wrapper
            %input.form-control{"type"=>"text", "placeholder"=>"Last Name"}
        .form-group
          %input.form-control{:style=>"width: 100%", "type"=>"text","placeholder"=>"Street Address 1"}
        .form-group
          %input.form-control{:style=>"width: 100%", "type"=>"text", "placeholder"=>"Street Address 2"}
        .form-group.clearfix
          %input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"City"}
        .form-group.clearfix
          %input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"State"}
        .form-group.clearfix
          %input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"Zip Code"}
        .form-group
          %input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"Phone Number"}
        .form-group
          %input.form-control{:style=>"width: 100%","type"=>"text", "placeholder"=>"Email Address"}
  %button.action-button
    %span.contenteditable.placeholder-showing{"contenteditable"=>"{{is_admin}}", "ng-model" => "petition.premium_call_to_action_button_text", "strip-br"=>"true", "select-non-editable"=>"true", "data-placeholder"=>"Call to Action Button", "ng-bind"=>"!is_admin && petition.premium_call_to_action_button_text || ''"}
.row
  #powered-by-wrapper
    %a#powered-by-container.row.text-right{"href" => "http://www.snaptivist.com", :style => "display: block"}
      = image_tag "powered_by.png"

  %div{"loading-screen" => "loading.show_spinner"}