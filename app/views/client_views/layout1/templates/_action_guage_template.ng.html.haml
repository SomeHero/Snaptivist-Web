#target-count-wrapper.segment-wrapper{:style => "margin: 0px auto 10px auto;"}
  .segment-inner-wrapper
    .row
      #target-count-progress-wrapper.col-md-11.solid-white-back.drop-shadow-full
        #progress-bar-outer-wrapper
          #progress-bar-wrapper.progress.progress-striped.progress-green
            #progress-bar.bar.orange-bar{:style => "width: {{get_percentage_signed()}}%;"}
            %span#progress-marker.mark{:style => "left: {{load_progress_marker()}}"}
      #petition-target-count-goal.col-md-1.target-count-goal
        %span.nobr
          {{ get_percentage_signed() }}
          \%
    .row
      .col-md-6.col-sm-6.col-xs-6.action-count{:style => "text-align: left; padding-left: 22px;"}
        %span.contenteditable.placeholder-showing{"contenteditable"=>"", "ng-model" => "content.action_label", "strip-br"=>"true", "select-non-editable"=>"true", "data-placeholder"=>"Action Label","name"=>"responders_label", "required"=>""}:
        %span#signature_count
          {{action.count}}
      .col-md-6.col-sm-6.col-xs-6.action-count{:style => "text-align: right; padding-right: 44px"}
        %span.contenteditable.placeholder-showing{"contenteditable"=>"", "ng-model" => "content.target_label", "strip-br"=>"true", "select-non-editable"=>"true", "data-placeholder"=>"Target Label","name"=>"target_label", "required"=>""}:
        %span.contenteditable.placeholder-showing{"contenteditable"=>"", "ng-model" => "content.target_count", "strip-br"=>"true", "select-non-editable"=>"true", "data-placeholder"=>"Target Number of Signatures","name"=>"target_count", "required"=>""}