          %li{"ng-click"=>"set_selected_index(1)", "ng-class"=>"set_style(1)"}
            %a{"href"=>""}
              Mobile Usage
          %li{"ng-click"=>"set_selected_index(2)", "ng-class"=>"set_style(2)"}
            %a{"href"=>""}
              Referrers
          %li{"ng-click"=>"set_selected_index(3)", "ng-class"=>"set_style(3)"}
