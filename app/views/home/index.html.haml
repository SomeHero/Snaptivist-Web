  #assets.page.color-1
    .inner-page
      %h2.page-headline Watch The Video:
      .inner-page.row 
        .col-md-6.col-md-offset-3
          %img{alt: "Play video", src: "assets/video.png"}/
          %a.lightbox.iframe.btn-play{href: "http://www.youtube.com/watch?v=ewey46RxXZk", target: "_blank"}
            %i.fa.fa-play 
