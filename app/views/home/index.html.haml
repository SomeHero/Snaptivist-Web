      .inner-page.row 
        .col-md-6.col-md-offset-3
          %img{alt: "Sign the Petition", src: "assets/Snaptivist Screen Shot Vets.png"}/
          %a.lightbox.iframe{href: "http://createaccount.snaptivist.com/", target: "_blank"} 
      %a.scroll.btn.btn-primary.btn-centered{href: "#contact"}
