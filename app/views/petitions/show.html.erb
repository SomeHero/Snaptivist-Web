<div class="container">
<input type="hidden" id="petition_id" value="<%= @petition.id %>" />
<%= image_tag "default_petition.png" %>
<h1>President Obama:</h1>
<h2><%= @petition.title %></h2>
<p class="well"><%= @petition.summary %></p>
<div class="bar">
</div>
<div id="target-count-wrapper" class="clearfix">
<div class="progress">
   <div class="bar" style="width: 60%;"></div>
</div>
<div class="pull-left">
Signers: 3
</div>
<div class="pull-right">
Goal: <%= @petition.target_count %>
</div>
</div>
<textarea id="comment" rows="6" name="comments" style="width: 98%" placeholder="Tell people why your signing..."></textarea>
<button id="sign-petition-fb" class="btn btn-primary btn-block btn-large">Sign  with Facebook</button>
<button id="sign-petition-user-name" class="btn btn-primary btn-block btn-large">Sign  with UserName/Password</button>


</div>
