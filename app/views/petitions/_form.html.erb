<%= simple_form_for(@petition) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :summary %>
    <%= f.input :target_count %>
    <%= f.association :target %>
    <%= f.input :short_url %>
    <%= f.input :rewrite_url_key %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
